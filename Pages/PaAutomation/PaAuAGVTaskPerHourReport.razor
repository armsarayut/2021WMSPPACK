        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="DATETIME">@Convert.ToDateTime(context.W_hour).ToString(VarGlobals.FormatDTHM)</MudTd>
            <MudTd DataLabel="COUNT">@context.W_count</MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager PageSizeOptions="new int[] { 10, 20, 50, 100 }" />
        </PagerContent>
    </MudTable>
}

